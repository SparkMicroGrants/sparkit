<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <template id="assets_backend" name="crm assets" inherit_id="web.assets_backend">
          <xpath expr="." position="inside">
              <!-- Salesteam dashboard asset -->
              <script type="text/javascript" src="/sparkit/static/src/js/sales_team_dashboard.js"></script>
              <script type="text/javascript" src="sparkit/static/src/js/sale.js"></script>
          </xpath>
      </template>

        <template id="assets_backend" name="custom bar assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/sparkit/static/src/less/sparkit.less"/>
            </xpath>
        </template>

      <template id="navbar_spark_logo" inherit_id="web.webclient_bootstrap">
            <xpath expr="//div[@class='navbar-header']" position="inside">
                <ul class="ul_spark_logo">
                    <li>
                        <img src="/sparkit/static/src/img/sparklogosmall.png"/>
                    </li>
                </ul>
            </xpath>
        </template>

        <!-- Custom Favicon-->
        <template id="sparkit_favicon" inherit_id="web.layout">
    		<xpath expr="//head//link" position="inside">
        		<link rel="shortcut icon" href="/sparkit/static/src/img/favicon.ico" type="image/x-icon"/>
		   	</xpath>
		</template>

    </data>
</openerp>
