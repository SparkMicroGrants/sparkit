										<page string="Planning"
											attrs="{'invisible': [('state', '=', 'community_identification')]}">
		  								<field name="cvrf_ids"
												context="{'default_community_id': active_id}"/>
		  							</page>
		  							<page string="Implementation"
											attrs="{'invisible': ['|', ('state', '=', 'community_identification'),
