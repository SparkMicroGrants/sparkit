													<field name="num_ppl_at_partnership"/>
												</group>
											</group>
										</page>
									</notebook>
								</page>

								<page string="Visit Forms">
									<notebook>
										<page string="Scouting">
											<field name="scouting_form_ids"
												context="{'default_community_id': active_id}"/>
