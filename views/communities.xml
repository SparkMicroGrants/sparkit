									<field name="is_operational_action_plan_approved"/>
								</group>
							</group>

							<group colspan="6" col="6" class="checklist"
								attrs="{'invisible': [('state', '!=', 'sustainability_plan')]}">
								<group colspan="6" col="6" class="no_style">
									<field name="is_operational_budget_approved"/>
								</group>
