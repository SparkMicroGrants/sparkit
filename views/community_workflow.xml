<openerp>
    <data>
        <!--FCAP Workflow-->
        <record model="workflow" id="wkf_fcap">
            <field name="name">Planning Worflow</field>
            <field name="osv">sparkit.community</field>
            <field name="on_create">True</field>
        </record>

