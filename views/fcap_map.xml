<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
  		<!-- FCAP Map Form View -->
  		<record model="ir.ui.view" id="fcap_map_view">
  			<field name="name">fcapmap.form</field>
  			<field name="model">sparkit.fcapmap</field>
  			<field name="arch" type="xml">
  				<form string="FCAP Map" create="false">
  					<sheet>
  						<group colspan="1" col="2">
  							<field name="name"/>
  						</group>
  						<seperator />
  						<field name="step_ids"/>
  						<seperator />
  						<field name="activity_ids"/>
  					</sheet>
  				</form>
  			</field>
  		</record>

  		<!--FCAP Map List View -->
  		<record model="ir.ui.view" id="fcap_map_tree">
  			<field name="name">fcapmap.tree</field>
  			<field name="model">sparkit.fcapmap</field>
  			<field name="arch" type="xml">
  				<tree string="FCAP Map" create="false">
  					<field name="name"/>
  				</tree>
  			</field>
  		</record>

  		<!--FCAP Map Report Form Actions-->
  		<record model="ir.actions.act_window" id="fcap_map_list_action">
  			<field name="name">FCAP Map</field>
  			<field name="res_model">sparkit.fcapmap</field>
  			<field name="view_type">form</field>
  			<field name="view_mode">tree,form</field>
  			<field name="help" type="html">
  				<p class="oe_view_nocontent_create">Create the first FCAP Map!</p>
  			</field>
  		</record>

  		<!-- FCAP Categories Form View -->
  		<record model="ir.ui.view" id="fcap_categories_view">
  			<field name="name">fcapcategories.form</field>
  			<field name="model">sparkit.fcapcategory</field>
  			<field name="arch" type="xml">
  				<form string="Categories">
  					<sheet>
  						<group>
  							<field name="name"/>
  						</group>
  					</sheet>
  				</form>
  			</field>
  		</record>

  	  	<!-- FCAP Activities Form View -->
  		<record model="ir.ui.view" id="fcap_activities_view">
  			<field name="name">fcapactivities.form</field>
  			<field name="model">sparkit.fcapactivity</field>
  			<field name="arch" type="xml">
  				<form string="Activities">
  					<sheet>
  						<group>
  							<field name="name"/>
  						</group>
  					</sheet>
  				</form>
  			</field>
  		</record>

  		<!--FCAP Activities List View -->
  		<record model="ir.ui.view" id="fcap_activities_tree">
  			<field name="name">fcapactivities.tree</field>
  			<field name="model">sparkit.fcapactivity</field>
  			<field name="arch" type="xml">
  				<tree string="FCAP Map">
  					<field name="category_id" widget="selection"/>
  					<field name="name"/>
  				</tree>
  			</field>
  		</record>


  		<!--FCAP Step List View-->
  		<record model="ir.ui.view" id="fcap_steps_tree">
  			<field name="name">fcapsteps.tree</field>
  			<field name="model">sparkit.fcapstep</field>
  			<field name="arch" type="xml">
  				<tree string="FCAP Steps">
  					<field name="step_number"/>
  					<field name="phase"/>
  					<field name="name"/>
  					<field name="duration"/>
  				</tree>
  			</field>
  		</record>
    </data>
</openerp>
