<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
  		<!-- Ongoing Community Assessemnts -->
  		<record model="ir.ui.view" id="oca_form_view">
  			<field name="name">oca.form</field>
  			<field name="model">sparkit.oca</field>
  			<field name="arch" type="xml">
  				<form string="Ongoing Community Assessments" create="false">
  					<sheet>
						<group colspan="4" col="4" class="no_style" string="OCA Information">
							<group colspan="2" col="2">
								<field name="country_id"/>
								<field name="country_name"  invisible="1" />
								<field name="community_id" options="{'no_create': True}"/>
								<field name="date"/>
								<field name="collected_by" options="{'no_create': True}"/>
								<field name="oca_number"/>								
								<field name="oca_type"/>
								<field name="start_time" widget="float_time"/>
								<field name="end_time" widget="float_time"/>
							</group>
							<group colspan="2" col="2">

							</group>
						</group>
						<group colspan="4" col="4" string="Background" class="no_style">
							<group colspan="2" col="2">
								<field name="community_member"/>
								<field name="age"/>
								<field name="sex"/>
								<field name="household_size"/>
								<field name="marital_status" attrs="{'invisible': [('country_name', '!=', 'Uganda')]}" />
							</group>
						</group>
						<group colspan="4" col="4" string="Biggest Concern" class="no_style">
							<group colspan="2" col="2">
								<field name="biggestconcern_family" attrs="{'invisible': [('oca_type', '!=', 'long')]}" />
								<field name="biggestconcern_family_category_id" widget="selection" attrs="{'invisible': [('oca_type', '!=', 'long')]}" />
								<field name="biggestconcern_family_subcategory_id" widget="selection"
									domain="[('category_id', '=', biggestconcern_family_category_id)]" attrs="{'invisible': [('oca_type', '!=', 'long')]}" />
							</group>
							<group colspan="2" col="2">
								<field name="biggestconcern_cmty" attrs="{'invisible': [('oca_type', '!=', 'long')]}" />
								<field name="biggestconcern_cmty_category_id" widget="selection" attrs="{'invisible': [('oca_type', '!=', 'long')]}" />
								<field name="biggestconcern_cmty_subcategory_id" widget="selection"
									domain="[('category_id', '=', biggestconcern_cmty_category_id)]" attrs="{'invisible': [('oca_type', '!=', 'long')]}" />
							</group>
						</group>
						<group colspan="4" col="4" string="Section Two: Capactiy" class="no_style">
							<group colspan="2" col="2">

							</group>
						</group>
						<group colspan="4" col="4" string="Section Three: Cohesion" class="no_style">
							<group colspan="2" col="2">

							</group>
						</group>
						<group colspan="4" col="4" string="Section Four: Leadership" class="no_style">
							<group colspan="2" col="2">

							</group>
						</group>
						<group colspan="4" col="4" string="Section Five: Civic Engagement" class="no_style">
							<group colspan="2" col="2">

							</group>
						</group>
						<group colspan="4" col="4" string="Section Six: Cross Sector" class="no_style">
							<group colspan="4" col="2">

							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

  		<!--OCAs List View -->
  		<record model="ir.ui.view" id="oca_tree">
  			<field name="name">oca.tree</field>
  			<field name="model">sparkit.oca</field>
  			<field name="arch" type="xml">
  				<tree string="Ongoing Community Assessments">
  					<field name="country_id"/>
  					<field name="community_id"/>
  					<field name="oca_number"/>
  				</tree>
  			</field>
  		</record>

  		<!-- OCA Form Actions-->
  		<record model="ir.actions.act_window" id="oca_list_action">
  			<field name="name">Ongoing Community Assessments</field>
  			<field name="res_model">sparkit.oca</field>
  			<field name="view_type">form</field>
  			<field name="view_mode">tree,form</field>
  			<field name="help" type="html">
  				<p class="oe_view_nocontent_create">
  				Create the first OCA!</p>
  			</field>
  		</record>

  		<!-- Biggest Concerns -->
  		<record model="ir.ui.view" id="biggestconcern_form_view">
  			<field name="name">biggestconcerncategory.form</field>
  			<field name="model">sparkit.biggestconcerncategory</field>
  			<field name="arch" type="xml">
  				<form string="Biggest Concern" create="false">
  					<sheet>
						<group colspan="4" col="4">
							<group colspan="2" col="2">
								<field name="name"/>
								<field name="category_code"/>
							</group>
						</group>
						<field name="subcategory_ids"/>
					</sheet>
				</form>
			</field>
		</record>

  		<!--Biggest Concern List View -->
  		<record model="ir.ui.view" id="biggestconcern_tree">
  			<field name="name">biggestconcerncategory.tree</field>
  			<field name="model">sparkit.biggestconcerncategory</field>
  			<field name="arch" type="xml">
  				<tree string="Biggest Concern Categories">
  					<field name="name"/>
  				</tree>
  			</field>
  		</record>

  		<!-- Biggest Concern Form Actions-->
  		<record model="ir.actions.act_window" id="biggestconcerncategory_list_action">
  			<field name="name">Biggest Concern Category</field>
  			<field name="res_model">sparkit.biggestconcerncategory</field>
  			<field name="view_type">form</field>
  			<field name="view_mode">tree,form</field>
  		</record>

  		<!-- Biggest Concerns (subcategory) -->
  		<record model="ir.ui.view" id="biggestconcernsubcategory_form_view">
  			<field name="name">biggestconcernsubcategory.form</field>
  			<field name="model">sparkit.biggestconcernsubcategory</field>
  			<field name="arch" type="xml">
  				<form string="Biggest Concern SubCategory" create="false">
  					<sheet>
						<group colspan="4" col="4">
							<group colspan="2" col="2">
								<field name="name"/>
								<field name="subcategory_code"/>
								<field name="category_id"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

  		<!--Biggest Concern (subcateogyr) List View -->
  		<record model="ir.ui.view" id="biggestconcernsubcategory_tree">
  			<field name="name">biggestconcernsubcategory.tree</field>
  			<field name="model">sparkit.biggestconcernsubcategory</field>
  			<field name="arch" type="xml">
  				<tree string="Biggest Concern SubCategories" editable="bottom">
  					<field name="name"/>
  					<field name="subcategory_code"/>
  				</tree>
  			</field>
  		</record>

  		<!-- Cross Sector Items Form -->
  		<record model="ir.ui.view" id="cross_sector_items_form_view">
  			<field name="name">crosssectoritems.form</field>
  			<field name="model">sparkit.crosssectoritem</field>
  			<field name="arch" type="xml">
  				<form string="Cross Sector: Items" create="false">
  					<sheet>
						<group colspan="4" col="4">
							<field name="name"/>
							<field name="code"/>
							<field name="filter"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

  		<!--Cross Sector Items List View -->
  		<record model="ir.ui.view" id="cross_sector_items_tree">
  			<field name="name">crosssectoritems.tree</field>
  			<field name="model">sparkit.crosssectoritem</field>
  			<field name="arch" type="xml">
  				<tree string="Cross Sector: Items" editable="bottom">
  					<field name="name"/>
					<field name="code"/>
					<field name="filter"/>
  				</tree>
  			</field>
  		</record>

  		<!-- Cross Sector Items-->
  		<record model="ir.actions.act_window" id="crosssectoritems_list_action">
  			<field name="name">Cross Sector: Items</field>
  			<field name="res_model">sparkit.crosssectoritem</field>
  			<field name="view_type">form</field>
  			<field name="view_mode">tree,form</field>
  		</record>

  		<!-- Cross Sector Animals -->
  		<record model="ir.ui.view" id="cross_sector_animals_form_view">
  			<field name="name">crosssectoranimals.form</field>
  			<field name="model">sparkit.crosssectoranimal</field>
  			<field name="arch" type="xml">
  				<form string="Cross Sector: Animals" create="false">
  					<sheet>
						<group colspan="4" col="4">
							<field name="name"/>
							<field name="code"/>
							<field name="filter"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

  		<!--Cross Sector Animals List View -->
  		<record model="ir.ui.view" id="cross_sector_animals_tree">
  			<field name="name">crosssectoranimals.tree</field>
  			<field name="model">sparkit.crosssectoranimal</field>
  			<field name="arch" type="xml">
  				<tree string="Cross Sector: Animals" editable="bottom">
  					<field name="name"/>
					<field name="code"/>
					<field name="filter"/>
  				</tree>
  			</field>
  		</record>

  		<!-- Cross Sector Animals-->
  		<record model="ir.actions.act_window" id="crosssectoranimals_list_action">
  			<field name="name">Cross Sector: Animals</field>
  			<field name="res_model">sparkit.crosssectoranimal</field>
  			<field name="view_type">form</field>
  			<field name="view_mode">tree,form</field>
  		</record>


  		<!-- Cross Sector Illnesses -->
  		<record model="ir.ui.view" id="cross_sector_illnesses_form_view">
  			<field name="name">crosssectorillnesses.form</field>
  			<field name="model">sparkit.crosssectorillness</field>
  			<field name="arch" type="xml">
  				<form string="Cross Sector: Illnesses" create="false">
  					<sheet>
						<group colspan="4" col="4">
							<field name="name"/>
							<field name="code"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

  		<!--Cross Sector Illnesses -->
  		<record model="ir.ui.view" id="cross_sector_illnesses_tree">
  			<field name="name">crosssectorillnesses.tree</field>
  			<field name="model">sparkit.crosssectorillness</field>
  			<field name="arch" type="xml">
  				<tree string="Cross Sector: Illnesses" editable="bottom">
  					<field name="name"/>
					<field name="code"/>
  				</tree>
  			</field>
  		</record>

  		<!-- Cross Sector Illnesses -->
  		<record model="ir.actions.act_window" id="crosssectorillnesses_list_action">
  			<field name="name">Cross Sector: Items</field>
  			<field name="res_model">sparkit.crosssectorillness</field>
  			<field name="view_type">form</field>
  			<field name="view_mode">tree,form</field>
  		</record>

    </data>
</openerp>
